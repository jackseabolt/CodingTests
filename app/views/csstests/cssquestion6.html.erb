<div class="container-fluid">

	<div class="row background-white">

		<div class="col-sm-8 col-sm-push-2 score_container">
			<h5 class="text-center">Current Score: <%= @test.score %></h5>
		</div>
		<div class="col-sm-6 col-sm-push-3 col-xs-10 col-xs-push-1  question_container">

			<div class="form_group">
			<%= form_tag cssquestion6_path(@test), :method=> 'get' do %>
				<h5>6. CSS is case-sensitive. True or false?</h5>
				<br />
				<div class="form-group">
					<%= radio_button_tag :answer, true, false %>
					<label for="answer">True</label>
				</div>
				<div class="form-group">
					<%= radio_button_tag :answer, false, false %>
					<label for="answer">False</label>
				</div>
				<% if !flash[:success] && !flash[:danger] %>
					<div class="form-group">
						<%= submit_tag "Submit", class: "btn btn-primary top_spacing_tf" %>
					</div>
				<% end %>
			<% end %>
			</div>

			<% if flash[:success] || flash[:danger] %>
				<%= link_to "Next Question", cssquestion7_path(@test), class: "btn btn-success pull-right" %> 
			<% end %> 
		</div>

	</div>

</div>