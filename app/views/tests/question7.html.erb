<div class="container-fluid">

	<div class="row background-white">

		<div class="col-md-8 col-md-push-2 score_container">
			<h5 class="text-center">Current Score: <%= @test.score %></h5>
		</div>
		<div class="col-sm-6 col-sm-push-3 col-xs-10 col-xs-push-1 question_container">

			<div class="form_group">
				<%= form_for question4_path(@test), method: :get do %> 
					<h5>7. Which tag would you use to contain a section of JavaScript in your HTML code?</h5>
					</br>
					<div class="col-xs-4">
						<h5>
							&lt;style&gt;
							
						</h5>
						<label for="answer"></label>
						<%= radio_button_tag :answer, 'option1' %>
					</div>
					<div class="col-xs-4">
						<h5>
							&lt;javascript&gt;
						</h5>
						<label for="answer"></label>
						<%= radio_button_tag :answer, 'option2' %>
					</div>
					<div class="col-xs-4">
						<h5>
							&lt;script&gt;
						</h5>
						<label for="answer"></label>
						<%= radio_button_tag :answer, 'option3' %>
					</div>
					<% if !flash[:success] && !flash[:danger] %>
						<div class="form-group">
							<%= submit_tag "Submit", class: "btn btn-primary top_spacing_button" %>
						</div>
					<% end %> 
				<% end %> 
			</div>

			<% if flash[:success] || flash[:danger] %> 
				<%= link_to "Next Question", question8_path(@test), class: 'btn btn-success pull-right top_spacing_button' %> 
			<% end %> 

		</div>
	</div>
</div>