<div class="container-fluid">

	<div class="row">
		<div class="col-md-8 col-md-push-3 ">
			<br />
			<br />
			<h4>Current Score: <%= @test.score %></h4>
			<br />
			<br />
		</div>

		<div class="col-md-6 col-md-push-3 question_container">
			<div class="form_group">
			<%= form_tag question1_path(@test), :method=> 'get' do %>
				<h5>How do you write an opening paragraph tag in HTML?</h5>
				<div class="form-group">
					<%= text_field_tag :answer, params[:answer], class: 'form-control' %>
				</div>
				<% if !flash[:success] && !flash[:danger] %>
				<div class="form-group">
					<%= submit_tag "Submit", class: "btn btn-primary" %>
				</div>
				<% end %>
			<% end %>
			</div>

			<% if flash[:success] || flash[:danger] %>
				<%= link_to "Next Question", question2_path(@test), class:"btn btn-success pull-right" %>
			<% end %> 
		</div>

	

	</div>

</div>